<!DOCTYPE html>
<html lang="en">

<head>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-white dark:bg-black text-lg text-black dark:text-white pb-24">
  <nav class="bg-white dark:bg-black border-b border-slate-300 dark:border-slate-700">
    <div class="mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 items-center">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <img class="h-8 w-8" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=500" alt="Microverse">
          </div>
          <div>
            <div class="ml-10 flex items-baseline space-x-4">
              <a href="#" class="text-gray-600 dark:text-gray-300 hover:bg-gray-700 hover:text-white rounded-md px-3 py-2 text-sm font-medium">Get the app</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <main class="container mx-auto">
    <div>
      <% if (story.body) { %>
      <% parts = story.body.split('\n').map((p) => `<p>${p}</p>`) %>
      <% story.images.forEach((image, index) => { %>
      <% parts = [...parts.splice(0, image.afterParagraph + 1 + index), `<img src="${image.url}" alt="${image.alt}" class="h-96 rounded border-2 border-slate-600 dark:border-slate-300">`, ...parts.slice(image.afterParagraph + 1 + index)] %>
      <% }) %>
      <h1 class="text-3xl font-bold text-center mt-12"><%= story.id %>. <%= story.title %></h1>
      <div class="flex justify-center items-center mt-2"><%- include("../partials/genres.ejs", {genres: story.genres}) %></div>
      <div class="mt-5 mx-20">
        <% parts.forEach(function(part){ %>
        <div class="mb-2 flex justify-center">
          <%- part %>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <h1 class="text-3xl font-bold text-center mt-12">Story not found</h1>
      <% } %>
    </div>
  </main>
  <footer>
  </footer>
</body>

</html>